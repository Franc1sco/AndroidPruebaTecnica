<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="Cliente"
            type="com.example.pruebatecnica.model.Client" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:maxLength="5"
            android:layout_weight="1"
            android:isScrollContainer="true"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:text="@{String.valueOf(Cliente.codigo)}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:maxLength="32"
            android:layout_weight="1"
            android:isScrollContainer="true"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:text="@{Cliente.nombre}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:maxLength="8"
            android:layout_weight="1"
            android:isScrollContainer="true"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:onClick="onClickCall"
            android:text="@{Cliente.telefono}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:maxLength="32"
            android:layout_weight="1"
            android:isScrollContainer="true"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:text="@{Cliente.email}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:maxLength="2"
            android:layout_weight="1"
            android:isScrollContainer="true"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:text="@{Cliente.visitado}" />
    </LinearLayout>
</layout>